<div class="container">
    <div class="col-md-4 col-sm-4 col-xs-4" style="text-align: center; margin-left:400px; margin-top:100px">
        {{#each ModificaPeriodo}}
        <form action="" method="post">
            <h4>Modificar periodo academico</h4>
            <div class="form-group">
                <input class="form-control" type="hidden" name="id_estudiante" value="{{id_periodo}}">
            </div>
            <div class="form-group">
                <label for="periodo"></label>
                <input type="text" name="periodo" class="form-control" id="periodo" value="{{periodo}}">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Modificar</button>
        </form>
        {{/each}}
    </div>
</div>